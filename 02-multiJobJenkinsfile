pipeline {
    agent any
    stages {
        stage("Build") {
            parallel{
                stage('Job1'){
                    steps{
                        sh('sleep 5')
                        echo "Steps in Job1"
                    }
                }
                stage('Job2'){
                    steps{
                        echo "Steps in Job2"
                        sh('sleep 7')
                        timeout(time: 5, unit: 'SECONDS') {
                            echo "Timeout completed"
                        }
                    }
                }
            }
        }
    }
}

